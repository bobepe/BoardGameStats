<Window x:Class="BoardGameStats.View.Players.EditPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardGameStats.View.Players"
        mc:Ignorable="d"
        Title="EditPlayerWindow" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Jméno hráče:" Margin="25" VerticalAlignment="Top" HorizontalAlignment="left"/>
        <TextBox Text="{Binding Name}" Height="30" Width="200" Margin="25,50" VerticalAlignment="Top" HorizontalAlignment="left" BorderThickness="1" BorderBrush="#E0E0E0" />

        <Button Command="{Binding AddPlayerCommand}" Height="30" Content="Vytvořit" Width="70"  VerticalContentAlignment="Center" Padding="5" Margin="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" BorderBrush="#E0E0E0" />
    </Grid>
</Window>
